                    <TextBlock Text="Категория изделия: " Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                    <ComboBox Grid.Column="1" Grid.Row="1" Height="25" Name="cmb_NomCat"></ComboBox>

